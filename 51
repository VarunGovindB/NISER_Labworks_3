#include <iostream>
#include <cmath>
using namespace std;
int main() 
{
int ip, i;
double n, d, s;
n = 0;
sum = 0;
cout << "Enter a number: ";
cin >> ip;
i = ip;
while (i != 0) 
{
n++;
i = i/10;
}
i = ip;
while (i!= 0) 
{
d= i % 10;
s += pow(d, n);
i = i/10;
}
if (s == ip) 
{
cout << "The number " << ip << " is an Armstrong number.";
}
else
{
cout << "The number " << ip << " is not an Armstrong number";
}
cout << endl;
return 0;
}
